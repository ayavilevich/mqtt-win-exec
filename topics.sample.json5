{
	mqttConnectOptions: { // https://github.com/mqttjs/MQTT.js/blob/master/README.md#mqttclientstreambuilder-options
		will: {
			topic: 'win/${HOSTNAME}/lwt',
			payload: 'OFF',
			retain: true,
		},
		clientId: 'mqtt-win-exec-${HOSTNAME}', // if not set will be random each restart and might cause 'will' issues
		keepalive: 10, // seconds
	},
	startTopic: {
		topic: 'win/${HOSTNAME}/lwt',
		payload: 'ON',
		mqttPublishOptions: {
			retain: true,
		},
	},
	subscribe: {
		'win/${HOSTNAME}/notify': 'powershell notify.ps1 test!',
		'win/${HOSTNAME}/notify2': {
			method: 'execFile',
			command: 'powershell',
			args: ['.\\notify.ps1 PC!']
		},
		'win/${HOSTNAME}/restart-service': 'powershell -command "Restart-Service SQLServer -Force"',
	},
	publish: {
		'win/${HOSTNAME}/dir': {
			command: 'cmd /c dir',
			mqttPublishOptions: {
				retain: true,
			},
			intervalPeriod: 'PT1M', // https://momentjs.com/docs/#/durations/
		},
		'win/${HOSTNAME}/ver': {
			command: 'ver',
			mqttPublishOptions: {
				retain: true,
			},
			intervalPeriod: 300,
		},
		'win/${HOSTNAME}/updates': {
			command: {
				method: 'execFile',
				command: 'powershell',
				args: ['.\\updates.ps1'],
			},
			mqttPublishOptions: {
				retain: true,
			},
			intervalPeriod: '4:00:00',
			runAtStart: false,
		},
	},
}
